<section class="container">
  <div class="card">
    <div class="card-header">
      <h2>New Post</h2>
    </div>
  </div>
  <form class="card-body" id="post-form">
    <input
      type="hidden"
      name="user-id"
      id="userId"
      value="{{req.session.userId}}"
    />

    <label class="form-label" for="post-title">Title</label>
    <input
      type="text"
      name="post-title"
      id="title"
      class="form-input"
      required
    />

    <label class="form-label" for="post-text">Text</label>
    <textarea name="post-text" id="text" class="form-input" required></textarea>

    <button type="submit" class="btn">Post</button>

  </form>
</section>

<script src="/js/addPost.js"></script>