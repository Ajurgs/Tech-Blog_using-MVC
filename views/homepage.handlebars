<div class="posts">
  {{#each}}
    <article class="card">
      <div class="card-header">
        <h2>
          <a href="/posts/{{id}}">{{title}}</a>
        </h2>
        <div>
          Posted by
          {{User.username}}
          on
          {{format_date createdAt}}
        </div>
      </div>
      <div class="card-body">
        {{text}}
      </div>
    </article>
  {{/each}}
</div>