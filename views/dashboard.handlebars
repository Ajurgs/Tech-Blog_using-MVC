<section class="dashboard">
  <a href="/dashboard/new">➕ New Post</a>

  <section class="posts">
    {{#each posts}}
      <article class="card">
        <div class="card-header">
          <h2>
            {{title}}
          </h2>
          <a href="/dashboard/edit/{{id}}">✏ Edit</a>
          <div>
            Posted on:
            {{format_date createdAt}}
          </div>
        </div>
        <div class="card-body">
          {{text}}
        </div>
      </article>
    {{/each}}
  </section>
</section>