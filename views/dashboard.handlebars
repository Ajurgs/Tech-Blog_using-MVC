<section class="dashboard container-fluid">
  <div class="column d-flex justify-content-end">
    <a class="btn btn-primary m-3" href="/dashboard/new">➕ New Post</a>
  </div>

  <section class="column posts">
    {{#each posts}}
      <article class="card">
        <div class="card-header">
          <h2>
            {{title}}
          </h2>
          <a href="/dashboard/edit/{{id}}">✏ Edit</a>
          <div>
            Posted on:
            {{format_date createdAt}}
          </div>
        </div>
        <div class="card-body">
          {{text}}
        </div>
      </article>
    {{/each}}
  </section>
</section>